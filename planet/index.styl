  font-family: sans-serif
  
.artboard
  width 800px
  height 600px
  color #eee
  border 20px solid white
  margin 50px auto
  background $bg
  box-shadow 0px 3px 60px rgba(#000, .4)
  position relative
  
  
.planet 
  width 220px
  height 220px
  left 290px
  top 190px
  border-radius 50%
  overflow hidden
  position absolute
  background $yellow
  border 8px solid $stroke

    
.planet-shadow
