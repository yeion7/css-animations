.stars div[class^="star"]
  width: 30px
  height: 30px
  position: absolute

  &:before,
  &:after
    content: ""
    background: $red
    display: block
    width: 40%
    height: 100%
    border-radius: 20px
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

  &:after
    transform: translate(-50%, -50%) rotate(90deg)

  &.blue:before,
  &.blue:after
    background: $blue

  &.yellow:before,
  &.yellow:after
    background: $yellow

  &.med
    transform: scale(0.6)

  &.small
    transform: scale(0.4)
    
