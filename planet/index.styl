  height 220px
  top 0px
  left 2px
  position absolute
  border-radius 50%
  box-shadow -20px 0px 0px rgba($shadow, .9) inset,
            -45px 0px 5px rgba($shadow, .2) inset,
            25px 0px 0px rgba($shadow, .1) inset
  transform rotate(40deg)

