$bg = #F5FAFC
$base = #EBF2FA
$base-tint = #A7D0E0
$stroke = #244356
$orange = #FDC23E
$blue = #449BAA
$red = #FF7761


*
  box-sizing: bordex-box
  
h1
  margin:30px
  text-align: center
  
.artboard
  width 800px
  height 600px
  background $bg
  margin 50px auto
  box-shadow 0px 3px 30px rgba(#000, .2)
  border 20px solid white
  position relative
  
.bb8 
  width 220px
  height 220px
  position absolute
  top 222px
  left 150px
  
  &-body
    width 220px
    height 220px
    border-radius 50%
    background $base
    position absolute
    border 8px solid $stroke
    overflow hidden
    animation: spin 2s linear infinite

.circle
  width 120px
  height 120px
  border-radius 50%
  border 8px solid $stroke
  background $orange
  position absolute
  &:after
    content ''
    width 45%
    height 45%
    background $base
    border 8px solid $stroke
    position absolute
    border-radius 50%
    left 50%
    top 50%
    transform translate(-50%, -50%)
  
.circle-1
  top -20px
  left -45px
  
.circle-2
  top 120px
  left 50px
    

.circle-3
  width 300px
  height 300px
  top -180px
  left 120px
  
.dot
  width 18px
  height 18px
  border-radius 50%
  background $stroke
  position absolute
  
.dot-1
  top 80px
  left 110px

.dot-2
  top 135px
  left 25px

.line
  width 100px
  height 8px
  background $stroke
  position absolute
  
.line-1
  top 20px
  left 20px
  transform rotate(-70deg)
  
.line-2
  top -60px
  left -40px
  transform rotate(-10deg)
  
.line-3
  top 10px
  left -100px
  transform rotate(60deg)  
  
.body-shadow-crop
  width 220px
  height 220px
  border-radius 50%
  position absolute
  border 8px solid $stroke
  overflow hidden
  
.body-shadow
  width 220px
  height 220px
  border-radius 50%
  position absolute
  box-shadow 0px 0px 60px rgba(#000, .4)
  top -40px
  left -30px
  
.bb8-head
  width 160px
  height 160px
  position absolute
  top -60px
  left -30px
  transform rotate(-30deg)
  
.head-top
  width 160px
  height 160px
  background $base
  border 8px solid $stroke
  border-radius 50%
  position absolute
  box-shadow -15px 0px 0px 5px #C4DEED inset

  
.lens
  position absolute
  width 46px
  height 46px
  border 8px solid $stroke
  border-radius 50%
  background #29596C
  top 25px
  left 55px
  overflow hidden
  
  &:after,
  &:before
    content ""
    display block
    width 6px
    height 56px
    background #2A6A7F
    position absolute
    left 10px
    top -5px
    transform rotate(45deg)
    
  &:after
    width 12px
    left 20px
    top 5px

.freckle
  width 14px
  height 14px
  background $stroke
  border-radius 50%
  position absolute
  top 70px
  left 130px
  
.head-top-crop
  width 110%
  height 50%
  overflow hidden
  position relative

.head-bottom
  position: absolute
  width: 100%
  top: 80px

.head-bottom-base,
.head-side-1,
.head-side-2
  
  border-bottom: 8px solid $stroke
  background: #C4DEED
  height: 20px

  position: absolute

.head-bottom-base
  width: 75%
  left: 18%

.head-side-1
  width: 35px
  transform: rotate(40deg)
  transform-origin: bottom left
  top: -23px
  left: -3px
  border-radius: 0px 0px 8px 8px

.head-side-2
  width: 35px
  transform: rotate(-40deg)
  transform-origin: bottom right
  top: -23px
  right: -18px
  border-radius: 0px 0px 8px 8px

.speedlines > div
    height 8px
    width 55px
    background $stroke
    border-radius 8px
    position absolute
    left 120px
    
    &.tail:after
      content " "
      display block
      height 8px
      width 20px
      background $stroke
      border-radius 8px
      position absolute
      left 100%
      margin-left 5px
      
    &.one
      top -65px
      left 60px
    
    &.two
      top -30px
      left 125px
    
    &.three
      top -10px
      left 110px
      width 30px
    &.four
      top 135px
      left 215px
      width 30px
    &.five
      top 150px
      left 225px

.sparkles > div
  width 30px
  height 30px
  position absolute
  
  &:before,
  &:after
    content: ''
    display: block
    width: 40%
    height: 100%
    border-radius: 20px
    background: $red
    position: absolute
    left: 50%
    top: 50%
    transform: translate(-50%, -50%)

  &:after
    transform: translate(-50%, -50%) rotate(90deg)
    
  &.blue:before,
  &.blue:after
    background: $blue

  &.orange:before,
  &.orange:after
    background: $orange

  &.med
    transform: scale(0.6)

  &.small
    transform: scale(0.4)

  &.one
    top: -53px
    left: 140px

  &.two
    top: -46px
    left: 210px

  &.three
    top: -6px
    left: 186px

  &.four
    top: -16px
    left: 280px

  &.five
    top: 44px
    left: 230px

  &.six
    top: 94px
    left: 240px

  &.seven
    top: 154px
    left: 216px

  &.eight
    top: 187px
    left: 185px

  &.nine
    top: 63px
    left: 325px

  &.ten
    top: 124px
    left: 315px

  &.eleven
    top: 161px
    left: 294px

  &.twelve
    top: 27px
    left: 366px

  &.thirteen
    top: 37px
    left: 415px

  &.fourteen
    top: 87px
    left: 385px

  &.fifteen
    top: 137px
    left: 378px

  &.sixteen
    top: 97px
    left: 455px
    
  &.pulse
    animation: pulse 1s linear infinite

  &.pulse-1
    animation: pulse 1s 300ms linear infinite

  &.pulse-2
    animation: pulse 1s 600ms linear infinite

  &.pulse-3
    animation: pulse 1s 900ms linear infinite

.ground > div
  height: 8px
  width: 80px
  background: $stroke
  position: absolute
  top: 230px
  left: -90px
  border-radius: 8px

  &.one .bump
    left: 40px

  &.two
    width: 25px
    left: -1px

  &.three
    width: 300px
    left: 34px

  &.four
    width: 90px
    left: 346px

    .bump
      left: 10px

  &.five
    width: 20px
    left: 450px

  &.six
    width: 80px
    left: 11px
    top: 255px

    .bump
      left: 10px

  &.seven
    width: 127px
    left: 171px
    top: 255px

    .bump
      left: 60px

  &.eight
    width: 87px
    left: 71px
    top: 295px

    .bump
      left: 30px

  .bump
    height: 15px
    width: 30px
    position: absolute
    top: -7px
    overflow: hidden
    animation: move 0.5s linear infinite

    &.move-1
      animation: move 0.5s 350ms linear infinite

    &.move-2
      animation: move 0.5s 700ms linear infinite

    &:after
      content: ''
      display: block
      height: 30px
      width: 30px
      border: 8px solid $stroke
      border-radius: 50%
      background: $bg
      box-sizing: border-box

@keyframes spin

  0%
    transform: rotate(360deg)
  100%
    transform: rotate(0deg)

@keyframes pulse
  0%
    transform: scale(1)
  90%
    transform: scale(0.3)

  100%
    transform: scale(1)

@keyframes move
  0%
    left: 5%
    transform: scale(0)

  10%
    transform: scale(1)

  90%
    transform: scale(1)

  100%
    left: 55%
    transform: scale(0)
